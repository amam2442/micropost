    
<% if current_user.liking?(micropost) %>   
    <%= form_with(model: current_user.likes.find_by(micropost_id: micropost.id), method: :delete) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'unfavorite', class: 'btn btn-danger w-10' %>
    <% end %>
<% else %>
    <%= form_with(model: micropost.likes.build) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'favorite', class: 'btn btn-danger w-10' %>
    <% end %>
<% end %>  
